@using MvcStokYtube.Models.Entity
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<TBLKATEGORILER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>KATEGORI ID</th>
        <th>KATEGORI ADI</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    <tbody>
        @foreach(var ktgr in Model)
            {
                <tr>
                    <th>@ktgr.KATEGORIID</th>
                    <td>@ktgr.KATEGORIAD</td>
                    <td><a href="/Category/Sil/@ktgr.KATEGORIID" class="btn btn-danger">Sil</a> </td>
                    <td><a href="/Category/KategoriGetir/@ktgr.KATEGORIID" class="btn btn-success">Güncelle</a> </td>


                </tr>
            }

    </tbody>
</table>
@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new {sayfa}))

<a href="/Category/NewCategory/" class="btn btn-info">Yeni Kategori Ekle</a>

